// Settings
// --------------------------------------------------------------------------------

$md-z-depth-css =                      false;
$md-z-depth-browser-prefix =           false;
$md-z-depth-animation =                true;
$md-z-depth-animation-time =           .28s;
$md-z-depth-animation-function =       cubic-bezier(.4, 0, .2, 1);



// Shadows
// --------------------------------------------------------------------------------
$md-z-depth = {
  // z-depth-1
  z1: {
    top: 0 2px 10px 0 rgba(0, 0, 0, 0.16)
    bottom: 0 2px 5px 0 rgba(0, 0, 0, 0.26)
  }
  // z-depth-2
  z2: {
    top: 0 6px 20px 0 rgba(0, 0, 0, 0.19)
    bottom: 0 8px 17px 0 rgba(0, 0, 0, 0.2)
  }
  // z-depth-3
  z3: {
    top: 0 17px 50px 0 rgba(0, 0, 0, 0.19)
    bottom: 0 12px 15px 0 rgba(0, 0, 0, 0.24)
  }
  // z-depth-4
  z4: {
    top: 0 25px 55px 0 rgba(0, 0, 0, 0.21)
    bottom: 0 16px 28px 0 rgba(0, 0, 0, 0.22)
  }
  // z-depth-5
  z5: {
    top: 0 40px 77px 0 rgba(0, 0, 0, 0.22)
    bottom: 0 27px 24px 0 rgba(0, 0, 0, 0.2)
  }
}



// Mixins
// --------------------------------------------------------------------------------

md-prefixer($property, $value, $prefixes)
  if $md-z-depth-browser-prefix
    for $prefix in $prefixes
      if $prefix == webkit
        -webkit-{$property}: $value
      else if $prefix == moz
        -moz-{$property}: $value
      else if $prefix == ms
        -ms-{$property}: $value
      else if $prefix == o
        -o-{$property}: $value
      else if $prefix == spec
        {$property}: $value
  else
    {$property}: $value

// Top & Bottom
md-z-depth($depth = 1, $orientation = null)
  $value = $md-z-depth["z" + $depth]

  if $orientation == top
    md-prefixer(box-shadow, $value["top"], spec)
  else if $orientation == bottom
    md-prefixer(box-shadow, $value["bottom"], spec)
  else
    md-prefixer(box-shadow, s(join(', ', $value["top"], $value["bottom"])), spec)

// Top
md-z-depth-top($depth = 1)
  md-z-depth($depth, top)

// Bottom
md-z-depth-bottom($depth = 1)
  md-z-depth($depth, bottom)

// Animation
md-z-depth-animation($depth-after, $orientation = full)
  &:hover,
  &:focus
    if $orientation == top
      md-z-depth-top($depth-after)
    else if $orientation == bottom
      md-z-depth-bottom($depth-after)
    else
      md-z-depth($depth-after)



// Classes
// --------------------------------------------------------------------------------

if $md-z-depth-css
  .md-z-depth
    for $i in (1)..(length($md-z-depth))
      &-z{$i}
        md-z-depth($i)

        &-top
          md-z-depth-top($i)

        &-bottom
          md-z-depth-bottom($i)

    // z-depth-animation
    if $md-z-depth-animation
      &-animation
        &:hover
          .z-depth-z1,
          .z-depth-z2,
          .z-depth-z3,
          .z-depth-z4,
          .z-depth-z5
            md-prefixer(transition, box-shadow $z-depth-animation-time $z-depth-animation-function, webkit o spec)
